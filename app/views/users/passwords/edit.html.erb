<div class="form-horizontal devise__common">
  <h2 class="devise__common--headline">パスワードの再設定</h2>
  <p>新しいパスワードを入力してください。</p>

  <%= form_for( resource, as: resource_name, url: user_password_path, html: { method: :put, local: :ja } ) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <div class="col-sm-2">
      <%= f.label :password, 'パスワード' %>
      <% if @minimum_password_length then %>
      <br><%= "（#{@minimum_password_length}文字以上）" %>
      <% end %>
    </div>
    <%= f.password_field :password, autocomplete: "new-password", class: "col-sm-3 registrations__new--form" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, 'パスワード再入力', class: "col-sm-2" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-sm-3 registrations__new--form" %>
  </div>

  <p class="passwords__new--submitForm">
    <%= f.submit "パスワードを変更する", class: "btn btn-success" %>
  </p>
  <% end %>
</div>
