<!--オリジナルアラート表示用部分テンプレート-->

<!--パターン作成関連ページorパターンの新規投稿ページでのみ表示-->
<% if /makings/.match?( controller_name ) || /new/.match( action_name ) && /patterns/.match?( controller_name ) then %>
<!--サクセス系メッセージ-->
<div class="alert alert-success application__alert--common application__alert--success" role="alert">
  <button type="button" class="close application__alert--closeButton" onclick="callMessageWindow();">
    <!--メッセージ非表示アクション-->
    <span aria-hidden="true">
      ×
    </span>
  </button>
  <!--タイトル-->
  <h3 class="alert-heading application__alert--headline">
    <span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span>
    Success
  </h3>
  <hr>
  <!--一覧-->
  <ul class="mb-0 application__alert--body">
    <li>サクセスメッセージ</li>
  </ul>
</div>

