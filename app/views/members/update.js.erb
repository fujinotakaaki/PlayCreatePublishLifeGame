// ユーザ情報更新後の処理
<% if @user.errors.any? then %>
// 表示中のバリデーションエラー用のclassを除去
$("input").removeClass("application__errors--textField")
// バリデーションエラーメッセージの表示
callMessageWindow( "danger", "<%= @user.errors.full_messages.join( ?, ) %>".split(',') );
// エラー項目にエラー用のclassを追加する
<% @user.errors.each do | column, message | %>
$(".members__edit--<%= column %>").addClass("application__errors--textField");
<% end %>
<% else %>
// テキストフィールドを除去し、元の表示に戻す
$(".members__show--profile").html( "<%= escape_javascript( render 'members/detail', user: @user ) %>" );
<% end %>
