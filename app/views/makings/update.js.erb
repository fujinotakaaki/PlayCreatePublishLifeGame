<% if @convertion_error_message.present? then %>
// データ変換エラーメッセージの表示
alert("！！警告！！\n<%= @convertion_error_message %>");
<% elsif @making.errors.any? then %>
// バリデーションエラーメッセージの表示
alert( "！！警告！！\n<%= @making.errors.full_messages.join( '\n' ) %>" );
<% else %>
// 画面表示への反映
initializeLifeGame( "<%= @update_making_pattern.join( ?, ) %>".split(',') );
// インターフェース（ボタン類）の復活
$(".patterns__show--lifeGameInterface").html( "<%= escape_javascript( render 'patterns/interface' ) %>" );
// 「変更を保存」ボタンを非表示にする
$(".makings__edit--submit").css({ "display": "none" });
// 更新したパターンを画面中央に戻す
$(".patterns__show--lifeGameDisplay").css({ "text-align": "" });
// 作成中パターンのデータが更新成功の通知
alert("更新に成功しました。");
<% end %>
