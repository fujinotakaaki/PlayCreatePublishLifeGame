<!--パターン作成ページ-->

<!--ページ上部-->
<div class="makings__edit--top">
  <%= form_with( model: @making, url: making_path, method: "patch", class: "form-horizontal" ) do | f | %>
  <%= f.hidden_field :display_format_id %>
  <!--ページ上部のタイトル-->
  <h3>
    <span class="glyphicon glyphicon-briefcase" aria-hidden="true"></span>
    パターン編集機能
    <%= render 'makings/edit_helper', f: f %>
  </h3>

  <!--トーラス面設定-->
  <div class="form-group">
    <%= f.label :is_torus, " トーラス面設定", class: "fas fa-globe-asia col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.radio_button :is_torus, true %>
      <%= f.label :is_torus, '有効' %>
      <%= f.radio_button :is_torus, false %>
      <%= f.label :is_torus, '無効' %>
    </div>
  </div>


  <!--作成中パターンの編集エリア-->
  <h3>
    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    パターン編集エリア
  </h3>
  <h6>編集エリアは右下のつまみにて高さの調整が可能です。</h6>
  <%= f.text_area :making_text, value: build_up_bit_strings_from( @making ).join( "\n" ), class: "makings__edit--textarea", type: 'number' %>
  <table class="makings__edit--transformScaleTable">
    <tr>
      <th>セルの縮尺：</th>
      <th>0%</th>
      <td>
        <%= f.range_field :transform_scale_rate, { in: (0..100), onchange: "$('.patterns__show--lifeGameDisplay').css({'transform': `scale(${this.value/100})`});" } %>
      </td>
      <th>100%</th>
    </tr>
  </table>
  <% end %>
</div>

<!--ページ下部-->
<div class="makings__edit--bottom">
  <!--ページ下部のタイトル-->
  <h3>作成中のパターン</h3>
  <!--ライフゲームエミュレート画面-->
  <%= render 'patterns/emulation' %>
</div>


<script type="text/javascript">
  /*
  * =============================
  * パターンアップデート前のバリデーション処理
  * =============================
  */
  $(function(){
    $("form").submit( function() {
      // アクション名を取得
      let actionName = $(this).attr('action');
      // メソッド名を取得
      let methodName = $(this).attr('method');
      // Makings#updateである場合
      if ( /making/.test(actionName) && /post/i.test( methodName ) ) {
        // 提出前のバリデーション実行 => falseなら送信中止
        return verificationMakingPattern();
      }
    });


    /*
    * =============================
    * トーラス面フラグのリアルタイム反映メソッド処理
    * =============================
    */
    $("#making_is_torus_true").change( () => patternData.changeTorusFlag( true ) );
    $("#making_is_torus_false").change( () => patternData.changeTorusFlag( false ) );
  });
</script>
