
<% if @comment.errors.any? then %>
<% @comment.errors.full_messages.each do | msg | %>
// コメントのバリデーション内容しか表示されないはず
alert( "<%= msg %>" );
<% end %>
<% else %>
$( ".comments__index" ).append( "<%= escape_javascript( render 'post_comments/article', comment: @comment ) %>" );
$( ".comments__form" ).val("");
<% end %>
