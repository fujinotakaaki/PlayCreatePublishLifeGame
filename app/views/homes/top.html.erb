<!--ライフゲームエミュレート画面-->
<%= render 'patterns/emulation' %>

<script type="text/javascript">
  $(function(){
    // トップページのレイアウト調整
    $("body").css({
      'background-color': 'black',
      'color': 'black'
    });
    // 「ウェルカムメッセージ」ライフゲーム の始動メソッド（9秒後開始）
    setTimeout( function(){
      // turbolinksによる２回目の発動を無効にするため
      initializeLifeGame();
      // ライフゲーム実行メソッド
      startProcess( 180 );
    }, 9000 );
  })
</script>
